<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Safety_Instructions.Views.ContentViews.StatisticsContentPage"
             x:Name="Details">
    <ContentView.Content>
     
            <Frame WidthRequest="50">
                <Grid>
                    <Grid.RowDefinitions >
                        <RowDefinition Height="25"  ></RowDefinition>
                        <RowDefinition Height="25"  ></RowDefinition>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"   ></ColumnDefinition>
                        <ColumnDefinition Width="*"   ></ColumnDefinition>
                        <ColumnDefinition Width="50"  ></ColumnDefinition>

                    </Grid.ColumnDefinitions>
                <Image Source="{Binding ImageSource,Mode=TwoWay}" x:Name="Icon" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2"></Image>
                <Label Text= "{Binding TitleText,Mode=TwoWay}" x:Name="Title" HorizontalOptions="CenterAndExpand" FontSize="Large" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"></Label>
                <Label Text="{Binding StaticNumbers,Mode=TwoWay}" x:Name="StaticNumber" FontSize="Large" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2"></Label>
                </Grid>
            </Frame>
       

    </ContentView.Content>
</ContentView>
