<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Safety_Instructions.Views.Profile.ProfilePage"
             Title="Profile">
    <ContentPage.Content>
        <StackLayout Padding="40">
            <Label Text="Hi ! get start with your profile"
                   FontSize="Title"
                   HorizontalOptions="CenterAndExpand"
                   Padding="10"></Label>
            <Frame CornerRadius="150" 
           HeightRequest="300"
           WidthRequest="300"
           HorizontalOptions="Center"
           Padding="0"
           IsClippedToBounds="True">

                <Image Source="{Binding profile.ImagePath,Mode=TwoWay}" 
                       WidthRequest="300"
                           HeightRequest="300"
           HorizontalOptions="FillAndExpand"
           VerticalOptions="FillAndExpand"/>
            </Frame>
            <Button Margin="0,10,0,0" Command="{Binding TakeImageCommand}" CornerRadius="10" Text="take Your Image"></Button>

            <Button Margin="0,10,0,0" Command="{Binding NextCommand}" CornerRadius="10" Text="Next"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>